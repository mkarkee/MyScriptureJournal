@page
@model MyScriptureJournal.Pages.Journals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Journal</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Journal.ID" />
            <div class="form-group">
                <label asp-for="Journal.BookName" class="control-label"></label>
                <input asp-for="Journal.BookName" class="form-control" />
                <span asp-validation-for="Journal.BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.ChapterVerse" class="control-label"></label>
                <input asp-for="Journal.ChapterVerse" class="form-control" />
                <span asp-validation-for="Journal.ChapterVerse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Notes" class="control-label"></label>
                <textarea asp-for="Journal.Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Journal.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Scripture" class="control-label"></label>
                <textarea asp-for="Journal.Scripture" class="form-control" rows="5"> </textarea>
                <span asp-validation-for="Journal.Scripture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.EntryDate" class="control-label"></label>
                <input asp-for="Journal.EntryDate" class="form-control" />
                <span asp-validation-for="Journal.EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
